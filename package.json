{
    "name": "redux-forge",
    "version": "2.4.0",
    "main": "forge.cjs.js",
    "module": "forge.esm.js",
    "repository": "git@github.com:trigo-at/redux-forge.git",
    "author": "David Wippel <david@trigo.at>",
    "license": "MIT",
    "scripts": {
        "lint": "eslint \"**/*.{js,jsx}\"",
        "test": "npm run prepare && jest --no-watchman --setupTestFrameworkScriptFile=./jest.setup.js",
        "precommit": "lint-staged",
        "prepare": "rollup -c"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write --single-quote --trailing-comma es5 --jsx-bracket-same-line --parser flow --tab-width 4 --no-bracket-spacing",
            "git add"
        ]
    },
    "devDependencies": {
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-trigo": "^5.0.0",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.14.3",
        "jest": "^23.1.0",
        "lint-staged": "^7.1.3",
        "prettier": "^1.13.4",
        "rollup": "^0.60.0"
    },
    "dependencies": {}
}
